  <script src="@Url.Content("~/Scripts/jquery.placeholder.min.js")"></script>
  <script src="@Url.Content("~/Scripts/jquery.tooltips.js")"></script>
  <script src="@Url.Content("~/Scripts/app.js")"></script>

  @MiniProfiler.RenderIncludes()

